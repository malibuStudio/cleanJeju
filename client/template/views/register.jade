template(name="register")
  .accounts-wrapper
    h1
      img(src="/img/moments_logo_512.png")
      span 회원가입
    form.account-form#register-form
      .inner
        p.msg 이미 회원인가요?
          a(href="{{pathFor 'signin'}}") 로그인
        .input-wrapper
          label(for="register-username")
            +svgUser
          input#register-username(type="text" placeholder="아이디" name="register-username")
        .input-wrapper
          label(for="register-email")
            +svgMail
          input#register-email(type="email" placeholder="이메일" name="register-email")
        .input-wrapper
          label(for="register-password")
            +svgKey
          input#register-password(type="password" placeholder="비밀번호" name="register-password")

        button.btn.btn-sm.btn-primary.btn-register(type="submit")
          | 회원가입
        //- a.forgot(href="")
          | 비밀번호 찾기