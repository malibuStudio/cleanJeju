template(name="trashList")
  +each Trashes
    .trash-wrapper
      .trash-header
        .left
          span.profile
          span.username {{createdUserName}}
        .right
          span.createdAt {{moFromNow createdAt withoutSuffix}}
      .trash-body
        .img-wrapper
          img(src="{{imageUrl}}")
        .action-bar
          a(href="#")
            //- i.ion-chatboxes
            i.ion-ios-chatboxes-outline
          a(href="#")
            //- i.ion-map
            i.ion-ios-location-outline
          if lgtm
            a(href="#")
              //- i.ion-ribbon-b
              i.ion-ios-heart-outline
              | {{lgtm}}
        .description
          | {{description}}